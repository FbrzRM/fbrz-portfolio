---
import Blur from '../components/Blur.astro'
import Astronaut from './svg/Astronaut.astro';
---

<header class="header">
    <Blur></Blur>
    <div class="container">
        <div class="content">
            <a href="/" class="title">
                <h2>Fbrz.</h2>
            </a>
            <div class="nav-bar">
                <nav class="navigation">
                    <a class="navigation__link" href="#">Inicio</a>
                    <a class="navigation__link" href="#">Experiencia</a>
                    <a class="navigation__link" href="#">Sobre mi</a>
                    <a class="navigation__link" href="#">Contacto</a>
                </nav>
            </div>
            <div class="astronaut">
                <Astronaut></Astronaut>
            </div>
        </div>
    </div>
</header>

<style>
    .nav-bar{
        position: relative;
        z-index: 4;
        background-color: var(--black);
        border-radius: 5rem;
    }

    .content{
        display: grid;
        grid-template-columns: repeat(5, 1fr);

        .title{
            grid-column: 1 / 2;
            position: relative;
            z-index: 4;
            display: flex;
            align-items: center;
            & h2{
                font-size: 5rem;
                margin: 0;
            }
        }

        .nav-bar{
            grid-row: 2 / 3;
            grid-column: 1 / 6;
            margin-top: 1rem;
        }
        .astronaut{
            grid-column: 5 / 6;
            position: relative;
            z-index: 5;
        }
    }


    @media (min-width: 1200px) {
        .content{
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5rem;

            & .nav-bar{
                flex: 1;
            }
        }
    }

    @media (min-width: 768px) {
        .navigation{
            display: flex;
            flex-direction: row;
            justify-content: center;
        }
    }

    .navigation__link{
        text-transform: uppercase;
        display: block;
        padding: 1.5rem 0;
        text-align: center;
        &:active{
            background-color: var(--black);
            box-shadow: 0rem 0rem 1rem .1rem var(--gray);
            &:first-of-type{
                border-radius: 5rem 5rem 0 0;
            }
            &:last-of-type{
                border-radius: 0 0 5rem 5rem;
            }
        }
    }

    @media (min-width: 768px) {
        .navigation__link{
            padding: 2rem 5rem;
            transition: background-color .3s;
            border-radius: 5rem;
            &:active{
                border-radius: 5rem;
                &:first-of-type{
                    border-radius: 5rem;
                }
                &:last-of-type{
                    border-radius: 5rem;
                }
            }
        }
    }

    @media (hover:hover){
        .navigation__link:hover{
            border-radius: 5rem;
            transform: scale(1.01);
            background-color: var(--black);
            box-shadow: 0rem 0rem 1rem .1rem var(--gray);
        }
    }



</style>