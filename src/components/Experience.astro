<style>
    .info{
        display: flex;
        gap: 2rem;
        & p{
            font-size: 2rem;
            margin: 0;
            color: var(--primary);
        }
    }

    .timeline{
        display: grid;
        grid-template-columns: 1fr;
    }
    .line{
        height: 5rem;
        background-color: #fff;
        width: .2rem;
        margin: 0 auto;
    }
    .line::before{
        content: "";
        width: 1.5rem;
        height: 1.5rem;
        display: block;
        background-color: #fff;
        border-radius: 1rem;
        position: relative;
        top: 35%;
        left: -.7rem;
    }
    .checkpoint{
        background-color: var(--black);
        padding: 1rem 1.5rem;
        border-radius: 1.4rem;
    }

    .icon, .line:nth-child(16){
        display: none;
    }

    @media (min-width: 768px){
        .timeline{
            display: grid;
            grid-template-columns: 48% 4% 48%;
        }

        .article{
            grid-column: 1 / 2;
        }
        .line{
            grid-column: 2 / 3;
            height: auto;
        }
        .article:nth-child(3){
            grid-column: 3 / 4;
            grid-row: 2 / 3;
        }
        .article:nth-child(5){
            grid-column: 1 / 2;
            grid-row: 3 / 4;
        }
        .article:nth-child(7){
            grid-column: 3 / 4;
            grid-row: 4 / 5;
        }
        .article:nth-child(11){
            grid-column: 3 / 4;
            grid-row: 6 / 7;
        }
        .article:nth-child(15){
            grid-column: 3 / 4;
            grid-row: 8 / 9;
        }
        .icon{
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .line:nth-child(2){
            display: flex;
            flex-direction: column;
            align-self: end;
            height: 15rem;
            &::before{
                top: 0;
            }
        }
        .line:nth-child(16){
            grid-row: 8 / 9;
            height: 8rem;
            display: block;
            &::before{
                top: 100%;
            }
        }
        .icon:nth-child(17){
            grid-row: 1 / 2;
            grid-column: 3 / 4;
        }
        .icon:nth-child(18){
            grid-row: 4 / 5;
        }
        .icon:nth-child(19){
            grid-row: 7 / 8;
            grid-column: 3 / 4;
        }
    }
</style>